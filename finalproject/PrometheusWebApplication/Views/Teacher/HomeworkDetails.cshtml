@model IEnumerable<PrometheusWebApplication.Models.Homework>

@{
    ViewBag.Title = "HomeworkDetails";
}

<h2>HomeworkDetails</h2>

<p>
    @Html.ActionLink("Back to Teacher Home", "Home")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HomeWorkID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReqTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LongDescription)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HomeWorkID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Deadline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReqTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LongDescription)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditHomeWork", new { id = item.HomeWorkID })

        </td>
    </tr>
    }

</table>
